	"runtime-version": "22.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "super_nonogram",
	"separate-locales": false,
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",

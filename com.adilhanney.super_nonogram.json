{
    "app-id": "com.adilhanney.super_nonogram",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "super_nonogram",
    "separate-locales": false,
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "modules": [
        {
            "name": "super_nonogram",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app",
                "tar -xf SuperNonogram_*.tar.gz -C /app",
                "mkdir -p /app/bin",
                "ln -s /app/super_nonogram /app/bin/super_nonogram"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/adil192/super_nonogram/releases/download/v0.9.0/SuperNonogram_v0.9.0_Linux_x86_64.tar.gz",
                    "sha256": "6b8d176fd758480e5c8e9c9e4afaa25382e21eacd11eb18525454c0d7c053251",
                    "only-arches": [
                        "x86_64"
                    ],
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/adil192/super_nonogram/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"SuperNonogram_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
                        "is-main-source": false
                    }
                },
                {
                    "type": "file",
                    "url": "https://github.com/adil192/super_nonogram/releases/download/v0.9.0/SuperNonogram_v0.9.0_Linux_arm64.tar.gz",
                    "sha256": "ed8af34efa648aa2608af544ec3e788abce2cba9d2c6d2636c4c8c7bffd8080e",
                    "only-arches": [
                        "aarch64"
                    ],
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/adil192/super_nonogram/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"SuperNonogram_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
                        "is-main-source": true
                    }
                }
            ]
        }
    ]
}

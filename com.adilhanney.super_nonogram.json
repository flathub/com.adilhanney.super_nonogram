{
    "app-id": "com.adilhanney.super_nonogram",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "super_nonogram",
    "separate-locales": false,
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "modules": [
        {
            "name": "super_nonogram",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app",
                "tar -xf SuperNonogram_*.tar.gz -C /app",
                "mkdir -p /app/bin",
                "ln -s /app/super_nonogram /app/bin/super_nonogram"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/adil192/super_nonogram/releases/download/v0.8.0/SuperNonogram_v0.8.0_Linux_x86_64.tar.gz",
                    "sha256": "836876c0d6c9d873ae5020c7eddc8efadae48ff9df43bf1726105e63e3afc2f4",
                    "only-arches": [
                        "x86_64"
                    ],
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/adil192/super_nonogram/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"SuperNonogram_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
                        "is-main-source": false
                    }
                },
                {
                    "type": "file",
                    "url": "https://github.com/adil192/super_nonogram/releases/download/v0.8.0/SuperNonogram_v0.8.0_Linux_arm64.tar.gz",
